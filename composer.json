{
    "name": "bert-w/memory-usage",
    "description": "Get the current memory usage (similar to htop) on unix-like systems.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BertW\\MemoryUsage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BertW\\MemoryUsage\\Test\\": "tests"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit tests"
        ]
    }
}
